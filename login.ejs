            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="email">Email address:</label>
                    <input autocomplete="off" type="email" class="form-control" id="login" name="login" value="" PlaceHolder="email@pda.com">
                </div>
                <div class="form-group">
